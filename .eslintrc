{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jest/recommended",
    "plugin:node/recommended-module"
  ],
  "plugins": ["import", "jest"],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "mjs": "never",
        "jsx": "never"
      }
    ]
  },
  "overrides": [
    {
      "files": "**/*.test.js",
      "rules": {
        "node/no-unpublished-require": 0,
        "node/no-missing-require": 0,
        "node/no-unpublished-import": 0,
        "node/no-missing-import": 0
      }
    }
  ]
}
